<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProfileActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="405dp"
        android:id="@+id/profilebg"
        android:background="@color/buttonBackground"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:id="@+id/profiletopbg"
        android:background="@drawable/curvedbutton"
        app:layout_constraintTop_toTopOf="parent"/>

    <ImageView
        android:id="@+id/profileback"
        android:layout_width="35dp"
        android:layout_height="35dp"
        app:srcCompat="@drawable/ic_back"
        tools:layout_editor_absoluteX="20dp"
        tools:layout_editor_absoluteY="19dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="30dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="30dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/myprofile"
        android:text="My Profile"
        android:fontFamily="@font/nunito"
        android:textColor="@android:color/black"
        android:textSize="40dp"
        app:layout_constraintTop_toBottomOf="@+id/profileback"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="15dp"
        android:layout_marginStart="40dp"
        android:layout_marginLeft="40dp" />

    <ImageView
        android:id="@+id/profiledp"
        android:layout_width="150dp"
        android:layout_height="150dp"
        app:srcCompat="@drawable/profile"
        tools:layout_editor_absoluteX="126dp"
        tools:layout_editor_absoluteY="54dp"
        app:layout_constraintTop_toBottomOf="@+id/myprofile"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/profilename"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/elsie"
        android:text="Poritosh Bardhan"
        android:textColor="@android:color/black"
        android:textSize="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/profiledp" />

    <TextView
        android:id="@+id/pending"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/profiletopbg"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="5dp"
        android:layout_marginStart="10dp"
        android:text="Pending Requests\n3"
        android:textColor="@android:color/black"
        android:fontFamily="@font/nunito"
        android:textSize="18dp"
        android:textAlignment="center"
        android:gravity="center_horizontal"
        android:layout_marginLeft="10dp" />

    <TextView
        android:id="@+id/completed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/profiletopbg"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="10dp"
        android:text="Requests Completed\n3"
        android:textColor="@android:color/black"
        android:fontFamily="@font/nunito"
        android:textSize="18dp"
        android:textAlignment="center"
        android:gravity="center_horizontal"
        android:layout_marginRight="10dp" />

    <TextView
        android:id="@+id/regnotitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/catamaran"
        android:text="Registration Number"
        android:textColor="@android:color/black"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/profilebg" />

    <TextView
        android:id="@+id/regno"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginLeft="40dp"
        android:fontFamily="@font/catamaran"
        android:text="19BIT0079"
        android:textColor="@android:color/black"
        android:textSize="20dp"
        app:layout_constraintTop_toBottomOf="@+id/regnotitle"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/phonetitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/catamaran"
        android:text="Phone"
        android:textColor="@android:color/black"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/regno" />

    <TextView
        android:id="@+id/phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginLeft="40dp"
        android:fontFamily="@font/catamaran"
        android:text="9901391021"
        android:textColor="@android:color/black"
        android:textSize="20dp"
        app:layout_constraintTop_toBottomOf="@+id/phonetitle"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/hosteltitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/catamaran"
        android:text="Hostel"
        android:textColor="@android:color/black"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/phone" />

    <TextView
        android:id="@+id/hostel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginLeft="40dp"
        android:fontFamily="@font/catamaran"
        android:text="P-221"
        android:textColor="@android:color/black"
        android:textSize="20dp"
        app:layout_constraintTop_toBottomOf="@+id/hosteltitle"
        app:layout_constraintStart_toStartOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>